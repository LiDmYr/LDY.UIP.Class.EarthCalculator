<UserControl xmlns:Controls="clr-namespace:LDY.Lesson8.EarthCalculator.UI.WPF.Controls"  x:Class="LDY.Lesson8.EarthCalculator.UI.WPF.EarthCalculatorUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LDY.Lesson8.EarthCalculator.UI.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <StackPanel x:Name="MainContainer">
        <StackPanel x:Name="PointViewsContainer">
            <Controls:PointInputView X="0" Y="0" DeletedPointView="OnDeletedPointView"/>
            <Controls:PointInputView X="0" Y="500" DeletedPointView="OnDeletedPointView"/>
            <Controls:PointInputView X="500" Y="500" DeletedPointView="OnDeletedPointView"/>
            <Controls:PointInputView X="500" Y="0" DeletedPointView="OnDeletedPointView"/>
        </StackPanel>
        <Button x:Name="AddPointInput" Click="AddPointInput_Click">+ (Add point)</Button>
        <Button x:Name="ShowSquare" Click="ShowSquare_Click">ShowSquare</Button>
    </StackPanel>
</UserControl>
